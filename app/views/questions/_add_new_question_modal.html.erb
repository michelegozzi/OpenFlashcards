<div class="modal fade" id="addNewQuestionModal" tabindex="-1" role="dialog" aria-labelledby="addNewQuestionModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="addNewQuestionModalLabel">Add new question</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
	  <%= form_with(model: [ @topic, @topic.questions.build ], local: true) do |form| %>
      <div class="modal-body">
		  <p>
			<%= form.label :text, class: "sr-only" %><br>
			<%= form.text_area :text, class: "form-control", rows: "3", placeholder: "Add text here..." %>
		  </p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <%= form.submit :class => 'btn btn-primary' %>
      </div>
	  <% end %>
    </div>
  </div>
</div>