<div class="list-group">
<% @question.answers.each do |answer| %>

  <div class="list-group-item shadow p-2 mb-2 bg-white rounded" style="width: 40rem;">
    <div class="container">
      <div class="row">
        <div class="col-sm-9">
          <p class="mb-1"><%= answer.text %></p>
		</div>
        <div class="col-sm-1">
	      <%= link_to 'Delete', [answer.question, answer], method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %>
		</div>
      </div>
    </div>
  </div>
<% end %>
</div>

